<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    tools:context=".FullscreenActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/joystickView_Left"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="8dp"
        custom:JV_autoReCenterButton="true"
        custom:JV_backgroundColor="@color/colorJoystickBackGround"
        custom:JV_backgroundSizeRatio="80%"
        custom:JV_borderColor="@color/colorJoystickBorder"
        custom:JV_borderWidth="4dp"
        custom:JV_buttonColor="@color/colorJoystickButton"
        custom:JV_buttonDirection="both"
        custom:JV_buttonSizeRatio="10%" />

    <Switch
        android:id="@+id/button_switch_cut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/button_switch_cut"
        android:textColor="#ffffff"
        android:textSize="18sp"
        tools:checked="false" />

    <ScrollView
        android:id="@+id/infoScroll"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/infoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                android:textColor="#80FAF6F6"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>